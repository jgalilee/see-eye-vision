{
  "name": "see-eye-vision",
  "version": "1.0.0",
  "description": "Remote control browser for physical input isolated systems with visual displays.",
  "author": "Jack Galilee",
  "license": "Apache-2.0",
  "main": "./src/app/app.js",
  "scripts": {
    "start": "electron-forge start",
    "start:development": "NODE_ENV=development electron -r babel-register .",
    "start:debug": "NODE_ENV=debug electron -r babel-register .",
    "start:doc": "node-static ./doc -p 6060",
    "build": "npm run build:client && npm run build:app",
    "build:client": "webpack",
    "build:app": "electron-forge package",
    "build:app:win": "electron-forge package --platform windows",
    "build:app:linux": "electron-forge package --platform linux",
    "build:app:osx": "electron-forge package --platform darwin",
    "build:doc": "jsdoc --destination ./doc --recurse ./src",
    "package:linux:rpm": "electron-forge make --platform linux --targets rpm",
    "package:linux:deb": "electron-forge make --platform linux --targets deb",
    "package:windows:msi": "electron-forge make --platform windows --targets wix",
    "package:osx:dmg": "electron-forge make --platform darwin --targets dmg",
    "clean": "rm -rf ./dist/**",
    "clean:app": "rm -rf ./dist/app",
    "clean:client": "rm -rf ./dist/client",
    "test": "mocha --require babel-core/register --reporter list ./src/test.js $(find ./src -name *.spec.js)",
    "lint": "eslint ./src --fix"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-jsdoc": "^0.4.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.9",
    "electron-forge": "^5.1.1",
    "electron-prebuilt-compile": "1.8.2",
    "eslint": "^4.16.0",
    "eslint-config-google": "^0.9.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "jsdoc": "^3.5.5",
    "mocha": "^5.0.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "electron-compile": "^6.4.2",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.16.2",
    "material-components-web": "^0.28.0",
    "socket.io": "^1.7.4"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "msi"
        ],
        "darwin": [
          "dmg"
        ],
        "linux": [
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "see_eye_vision"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "seeeyevision"
      }
    }
  }
}
